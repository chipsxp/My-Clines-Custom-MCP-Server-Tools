{
  "name": "viewport-control",
  "version": "0.2.0",
  "description": "Change viewport screen size",
  "private": true,
  "type": "module",
  "bin": {
    "viewport-control": "./build/index.js"
  },
  "files": [
    "build"
  ],
  "scripts": {
